<% layout("/layouts/boilerplate.ejs") %>

<body>
    <!-- style -->
    <style>
       body {
          font-family: Arial, sans-serif;
          background: #f9fafb;
          margin: 0;
          padding: 0;
          display: flex;
          flex-direction: column;
        }
    
        form {
          background: white;
          padding: 2rem;
          border-radius: 10px;
          box-shadow: 0 2px 8px rgba(0,0,0,0.1);
          width: 600px;
          display: flex;
          flex-direction: column;
          justify-content: center;
          margin-left: 30%;
        }
    
        h2 {
          text-align: center;
          margin-bottom: 1rem;
          color: #2b7a0b;
        }
    
        label {
          display: block;
          margin: 0.5rem 0 0.2rem;
          font-weight: bold;
          font-size: 0.9rem;
        }
    
        input, textarea, select {
          width: 100%;
          padding: 0.5rem;
          margin-bottom: 1rem;
          border: 1px solid #ccc;
          border-radius: 6px;
          font-size: 0.9rem;
        }
    
        button {
          background: #2b7a0b;
          color: white;
          padding: 0.7rem;
          border: none;
          border-radius: 6px;
          font-size: 1rem;
          cursor: pointer;
          transition: background 0.3s;
        }
    
        button:hover {
          background: #256508;
        }
        /* RESPONSIVE DESIGN FOR MOBILE DEVICES */
        @media (max-width: 768px) {
          form {
            width: 90%;
            margin: 1.5rem auto;
            padding: 1.5rem;
          }

          h2 {
            font-size: 1.3rem;
          }

          input, textarea, select {
            font-size: 1rem;
            padding: 0.6rem;
          }

          button {
            font-size: 1rem;
            padding: 0.8rem;
          }
        }

        @media (max-width: 480px) {
          form {
            width: 95%;
            padding: 1.2rem;
          }

          h2 {
            font-size: 1.1rem;
          }

          label {
            font-size: 0.85rem;
          }

          button {
            font-size: 0.95rem;
          }
        }
      </style>

      <!-- form -->

    <form method="POST" action="/home/listings/<%=listing._id%>?_method=put" novalidate class="needs-validation" enctype="multipart/form-data" >
        <h2>Edit your Machinery</h2>

        <div>
          <label for="title">Title</label>
          <input type="text" id="title" name="listing[title]" value="<%=listing.title%>" class="form-control" required />
          <div class="invalid-feedback">
            Please enter a Title.
          </div>
        </div>
   
        <div>
          <label for="type">Type</label>
          <select id="type" name="listing[type]" class="form-control" required>
            <option value="">Select Type</option>
            <option value="tractor" <%= listing.type === "tractor" ? "selected" : "" %>>Tractor</option>
            <option value="harvester" <%= listing.type === "harvester" ? "selected" : "" %>>Harvester</option>
            <option value="sprayer" <%= listing.type === "sprayer" ? "selected" : "" %>>Sprayer</option>
            <option value="plough" <%= listing.type === "plough" ? "selected" : "" %>>Plough</option>
            <option value="seeder" <%= listing.type === "seeder" ? "selected" : "" %>>Seeder</option>
            <option value="irrigation" <%= listing.type === "irrigation" ? "selected" : "" %>>Irrigation</option>
            <option value="other" <%= listing.type === "" ? "selected" : "" %>>Other</option>
          </select>
          <div class="invalid-feedback">
            Please choose a Type.
          </div>
        </div>
   
        <div>
          <label for="description">Description</label>
          <textarea id="description" name="listing[description]" rows="3" class="form-control" required><%=listing.description%></textarea>
          <div class="invalid-feedback">
            Please enter the Decription.
          </div>
        </div>
   
        <div>
          <label for="pricePerDay">Price per Day (â‚¹)</label>
          <input type="number" id="pricePerDay" name="listing[pricePerDay]" value="<%=listing.pricePerDay%>" class="form-control" required />
          <div class="invalid-feedback">
            Please enter Price.
          </div>
        </div>
    
         <!-- Existing Image Preview -->
    <% if(listing.imageUrl && listing.imageUrl.url) { %>
      <div class="mb-2">
        <label>Current Image:</label><br>
        <img src="<%=listing.imageUrl.url%>" alt="Current Image" style="width: 150px; height: auto; border-radius: 5px; border: 1px solid #ccc;">
      </div>
      <% } %>

      
        <div>
          <label for="imageUrl">Upload New Image</label>
          <input type="file" id="imageUrl" name="listing[imageUrl]" />
        </div>
    
        <div>
          <label for="location">Location</label>
          <input type="text" id="location" name="listing[location]" value="<%=listing.location%>" class="form-control" required />
          <div class="invalid-feedback">
            Please enter Location.
          </div>
        </div>
   
        <div>
          <label for="community">Community</label>
          <input type="text" id="community" name="listing[community]" value="<%=listing.community%>" />
        </div>
    

    <button type="submit">Update</button>

    </form>
</body>
